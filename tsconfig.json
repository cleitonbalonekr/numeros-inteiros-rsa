{
  "compilerOptions": {
    "target": "es2016",                              
    "module": "commonjs",                               
    "types": ["vitest/globals"],
    "allowJs": true, 
    "outDir": "build",                                                     
    "esModuleInterop": true,                                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                                 
  },
  "exclude": ["src/**/**.spec.ts"]
}
